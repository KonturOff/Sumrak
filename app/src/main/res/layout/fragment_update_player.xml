<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.AddPlayer">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A090909"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Редактирование Персонажа" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя персонажа: " />

        <EditText
            android:id="@+id/editNamePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Дальний бой" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Ближний бой" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Сила" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Ловкость" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Воля" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Стойкость" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Интелект" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Сообразительность" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Наблюдательность" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Харизма" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editDb"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editBb"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editPower"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editDexterity"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editVolition"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editEndurance"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editIntelect"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editInsihgt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editObservation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editChsarisma"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Раны (Max)" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Количество опыта" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Влияние" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|right"
                android:text="Очки судьбы" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editHP"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editXP"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editInfluence"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />

            <EditText
                android:id="@+id/editFate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="2"
                android:inputType="number" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/saveStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Сохранить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>